<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anbara.ayoub.drawing.fragments.BackgroundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/choose_color"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/my_drawable_background"
            app:srcCompat="@drawable/ic_color_picker"
            android:contentDescription="color Picker" />

        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginTop="20dp"
            android:id="@+id/recycler_color"
            android:layout_width="match_parent"
            android:layout_height="80dp"


            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>